<div class="depot_form"> 
	<% if flash[:alert] %>
	<p id="notice"><%= flash[:alert] %></p> 
	<% end %>

	<%= form_tag do %> 
	<fieldset>
		<legend><h2>管理员登录</h2></legend>

		<div class="field">
			<%= label_tag :name, '用户名' %>
			<%= text_field_tag :name, params[:name] %>
		</div>
		<div class="field">
			<%= label_tag :password, '密码' %>
			<%= password_field_tag :password, params[:password] %>
		</div>
		<div class="field">
			<%= submit_tag "登录" %> 
		</div>
	</fieldset> 
	<% end %>
</div>
